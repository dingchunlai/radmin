<DIV class="user_right">

<DIV id=widebar >
<DIV id=nav_bottom></DIV>
<DIV id=widebar_content>
  <div id=userprofile>
    <div class=top>
      <div class=profile_name>我的和家 - 在建工地</div>
    </div>
    <div style="padding:5px; PADDING-LEFT: 30px; color:#808080">
      在这里您可以添加和维护在建工地信息。
    </div>
  </div>
</DIV>
<DIV class=mainbox style="height:480px;">
	<div class="same_cha">
    <ul>
	<li class="line"></li>
    <li id="s1" class="menu_on"><a href="/deco/factory_list">工地列表</a></li>
    
    <li class="line"></li>
    <li id="s2" class="menu_on"><a href="/deco/factory_edit">新建工地</a></li>
    <li class="more"></li>
	</ul>
  </div>

<script type="text/javascript">
window.onload = function(){
  //div_main_height = 440;
  //ge("div_main").style.height = div_main_height;
  //ge("L_wrapper").style.height = div_main_height+6;
  recordcount = <%=@recordcount%>;
  pagesize = <%=@pagesize%>;
  curpage = <%=@curpage%>;
  cur_list = 0;
  listsize = <%=@listsize%>;
  page_index_list(recordcount, pagesize, curpage, cur_list, listsize);
}
function gotopage(page){
    window.open("/deco/factory_list?page="+page+"&recordcount=<%=@recordcount%>", "_self");
}
function del(id){
    if (confirm('您确定要删除这条记录吗？')) hideiframe.location="/deco/factory_del?id="+id;
}
function deleteAll(){
    if (confirm('您确定要删除这些记录吗？')){
      var ids = "0";
      for (i=0; i<document.form1.f_id.length;i++){
          if (document.form1.f_id[i].checked)
              ids += ", " + document.form1.f_id[i].value;
      }
      if (ids!="0") hideiframe.location="/deco/factory_del?ids="+ids;
    }
}

var checkflag = "false";
function SelectAll(field) { //全选checkbox
  if (checkflag == "false") {
  for (i = 0; i < field.length; i++) {
  field[i].checked = true;}
  checkflag = "true";
  return "false";
  }
  else {
  for (i = 0; i < field.length; i++) {
  field[i].checked = false; }
  checkflag = "false";
  return "true";

  }
}
</script>
<style type="text/css">
  #pagelist{
    font-family:Verdana;
    color:#999999;
    font-size:12px;
    letter-spacing:1px;
    vertical-align: middle;
  }
  #pagelist a{
    color:#000040;
    text-decoration:none;
  }
  #pagelist a:hover{
    color:#F27900;
    text-decoration:none;
  }
	#datalist th{
		text-align:center;
	}

</style>

<div id="same1">
<form name="form1">
  <div style="font-family:Verdana; color:#DD4504; line-height:32px; font-size:12px; letter-spacing:1px; margin: 0px 0px 0px 15px; ">
		总共搜索到<B><%=@recordcount%></B>条记录 当前显示第
	    <script type="text/javascript">document.write(generate_select_by_number(1, <%=@pagecount%>, <%=@curpage%>, "", "", "onchange=\"gotopage(this.value);\""));</script>
	    页 共<B><%=@pagecount%></B>页
  </div>
  <div style="height:390px;">
  <table id="datalist" style="margin-left:7px; width:98%;">
    <thead>
    <tr>
            <th>编号</th>
            <th>所属区域</th>
            <th>楼盘名称</th>
            <th>户型</th>
            <th>预算</th>
            <th>可供参观时间</th>
            <th>操作</th>
    </tr>
    </thead>
    <tbody id="factory_datalist">
    <%@factorys.each do |factory|%>
    <tr align="center" style="background-color:#FFFDE6" id="factory_<%= factory.id %>" class="factory_sortable">
      <td width="90"><input type="checkbox" name="f_id" value="<%=factory.id%>" /> <%=factory.id%></td>
      <td><%=@city[factory.PROVINCE1.to_i]%>-<%=DecoFactory.getarea(factory.PROVINCE2.to_i)%></td>
      <td><a href="/deco/factory_edit?id=<%=factory.id%>" target="_blank"><%= factory.NAME %></a></td>
      <td><%= factory.FANGXING %></td>
      <td><%= factory.MONEY %>万</td>
      <td><%= factory.STARTENABLE.strftime("%Y-%m-%d") rescue ""%> 至 <%= factory.ENDENABLE.strftime("%m-%d") rescue ""%></td>
      <td width="60">
        <a href="/deco/factory_edit?id=<%=factory.id%>" target="_blank">编辑</a> ↑↓
      </td>
    </tr>
    <% end %>
    </tbody>
		<% if @factorys.size == 0 %>
			<tr align="center" style="background-color:#FFFDE6">
	      <td  colspan="7">
	      	您还没有建立工地,<a href="/deco/factory_edit">新建</a>
	      </td>
	    </tr>
		<% end %>
    </table>
    </div>

    <div id="div_pagelist" style="margin:0px 10px 0px 10px;">
      <div style="float:left">
      <input onclick="SelectAll(document.form1.f_id)" type="button" value="全选" class="btn1_mouseout" onmouseover="this.className='btn1_mouseover'" onmouseout="this.className='btn1_mouseout'" />&nbsp;
      <input onclick="deleteAll()" type="button" value="批量删除" class="btn1_mouseout" onmouseover="this.className='btn1_mouseover'" onmouseout="this.className='btn1_mouseout'" />　
      </div>
      <div style="float:right"><span id="pagelist"></span></div>
    </div>
</form>
</div>
</DIV>
</DIV>
</DIV>

</DIV>
<%= sortable_element('factory_datalist', :url => {:action => "sort"},:tag =>:tr) %>