<style type="text/css">
table {
	border:1px solid #CCC;
	border-collapse:collapse ;
	width:100%;
}
th, td {
	border:1px solid #DDD;
	border-left:0;
	border-right:0;
	padding:.3em .5em;
}

tr{ 
    background-color:expression('#F0F0F0,#DDD'.split(',')[rowIndex%2]); 
}
</style>
&nbsp;&nbsp;&nbsp;&nbsp;资源类型
<select onchange='changeleixing(this.value)'>
<option value='1'>公司</option>
<option value='2' >点评</option>
<option value='3' selected>回复</option>
</select>
</p>
<script type="text/javascript">
	function changeleixing(val){
		if(val == '1')
			location.href='/review/back_company_list';
		else if(val == '2')
			location.href='/review/back_commont_list';
		else if(val == '3')
			location.href='/review/replyindex';
	}
</script>
<form action="/review/replyindex" method="post" id="fmid">
	<p align=center><input type="text" name="replycontent" value="<%=@replycontent%>"><input type=submit value="搜索"><input type="button" name="删除" value="删除" onclick="deletereply()"></p>
	<table border=1 align=center style="font-size:12px">
		<tr>
			<td>选择</td>
			<td>id</td>
			<td width=200>名字</td>
			<td width=400>回复内容</td>
			<td>回复人</td>
			<td>时间</td>
			<td>操作</td>
		</tr>
		<%@replys.each do |reply|%>
			<tr>
				<td><%= check_box_tag "review[selected_ids][]", reply.id %></td>
				<td>
				<%if reply.type.to_i == 1%>
					<a href="http://z.51hejia.com/events/<%=reply.c1%>" target="_blank"><%=reply.id%></a>
				<%elsif reply.type.to_i == 2%>
					<a href="http://z.51hejia.com/quotations/<%=reply.c1%>" target="_blank"><%=reply.id%></a>
				<%else%>
					<a href="http://z.51hejia.com/dianping-<%=reply.c1%>" target="_blank"><%=reply.id%></a>
				<%end%>
				
				</td>
				<td width=200>
					<%if reply.type.to_i == 1%>
						<%if reply.event%><%=reply.event.title%><%end%>
					<%elsif reply.type.to_i == 2%>
						<%if reply.quotation%><%=reply.quotation.title%><%end%>
					<%else%>
						<%if reply.review%><%=reply.review.title%><%end%>
					<%end%>
				</td>
				<td width=400><%=reply.content%></td>
				<td><%=reply.username%></td>
				<td><%if reply.cdate%><%=reply.cdate.strftime("%Y-%m-%d")%><%end%></td>
				<td><a href="/review/back_reply_edit?replyid=<%=reply.id%>" target="_blank">修改</a></td>
			</tr>			
		<%end%>
	</table>
	<p align=center><%= will_paginate @replys %></p>
</form>
<script language="javascript">
	function deletereply(){
		if(!checkselected())
		{
			alert('请选择回复');
			return false;
		}
		
		document.getElementById("fmid").action = "/review/replydelete";
		document.getElementById("fmid").submit();
	}
	
	function checkselected(){
		var chs = document.getElementsByName("review[selected_ids][]");
		if(chs.length > 0){
			var count = 0;
			for(var i=0;i<chs.length;i++){
				if(chs[i].checked == true)
					count++;
			}
		}else{
			return false;
		}
		if(count == 0){
			return false;
		}else{
			return true;
		}
	}
</script>