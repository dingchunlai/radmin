<table width="100%" border="0" cellspacing="0" cellpadding="0">
	<tr>
		<th>缩略图</th>
		<th>标题</th>
		<th>链接</th>
		<th>创建日期</th>
		<th>更新日期</th>
		<th>相关操作</th>
	</tr>
	<% @banners.each do |banner| %>
	<tr>
		<td><%= banner.image ? image_tag(banner.image.url(:thumb)) : "暂无图片" %></td>
		<td><%= banner.title %></td>
		<td><%= banner.link %></td>
		<td><%= banner.created_at.to_s(:db) %></td>
		<td><%= banner.updated_at.to_s(:db) %></td>
		<td>
			<%= link_to "查看", vendor_banner_path(banner) %>
			<%= link_to "编辑", edit_vendor_banner_path(banner) %>
			<%= link_to "删除", vendor_banner_path(banner), :method => :delete, :confirm => "确认删除吗？" %>
		</td>
	</tr>
	<% end %>
</table>
<%= will_paginate @banners %>