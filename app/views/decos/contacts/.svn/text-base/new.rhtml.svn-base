<DIV class="user_right">
  <DIV id=widebar >
    <DIV id=nav_bottom></DIV>
    <DIV id=widebar_content> <div id=userprofile>
        <div class=top>
          <div class=profile_name>我的和家 - 公司联系方式</div>
        </div>
        <div style="padding:5px; PADDING-LEFT: 30px; color:#808080">
          <% if flash[:notice].nil? %>
            在这里您可以添加和维护公司联系信息。
          <%else%>
            <b><font color="red"><%= flash[:notice] %></font></b>
          <% end %>
        </div>
      </div>
    </DIV>
    <DIV class=mainbox style="border:1px solid #f60;border-left:none;border-bottom:none;">
      <div class="same_cha">
        <ul>
          <li class="line"></li>
          <li id="s1" class="menu_off"><%= link_to "联系地址列表", :action => "index"%></li>
          <li class="line"></li>
          <li id="s1" class="menu_on"><%= link_to "新建联系地址", :action => "new"%></li>
          <li class="line"></li>
        </ul>
      </div>
    </DIV>
    <div style="width:760px;float:left">
      <% form_for :deco_firms_contact, :url => (@deco_firms_contact.new_record? ? deco_contacts_path : deco_contact_path(@deco_firms_contact)), :html => {:method => (@deco_firms_contact.new_record? ? :post : :put)} do |f| %>
        <%= f.hidden_field :deco_firm_id, :value => @firm.id %>
        <table style="margin-left: 20px;">
          <tr>
            <td>公司地址</td>
            <td><%= f.text_field :address, :size => '50px'  %></td>
          </tr>
          <tr>
            <td>联系电话</td>
            <td><%= f.text_field :telephone, :size => '50px'  %></td>
          </tr>
           <tr>
            <td>在线联系</td>
            <td><%= f.text_field :online_contact, :size => '50px' %></td>
          </tr>
           <tr>
            <td>总店|分店</td>
            <td>
                <%= f.select(:is_master, DecoFirmsContact::ADDRESS_TYPE.map {|key, value| [key, value]}, :selected => (@deco_firms_contact.master? ? 1 : 0)) %>
            </td>
          </tr>
          <tr>
            <td align="center" colspan="2"><%= submit_tag "提 交" %></td>
          </tr>
        </table>
      <% end -%>
      </ul>
    </div>
  </DIV>
</DIV>
