<script type="text/javascript">
function deleteAll(){
    if (confirm('您确定要删除这些记录吗？')){
      var ids = "0";
      var lenz = document.form1.f_id.length;
      if(typeof(lenz) == "undefined") {
	      lenz=1;
      }
      if(lenz==1){
      	if (document.getElementById('f_id').checked)
      		ids += ", " + document.getElementById('f_id').value;
      }else{
	      for (i=0; i<lenz;i++){
	          if (document.form1.f_id[i].checked)
	              ids += ", " + document.form1.f_id[i].value;
	      }
      }
      if (ids!="0"){
      	document.getElementById('deleteids').value = ids;
		document.getElementById('form1').action = '/member/user_photo_del';
		document.getElementById('form1').submit();
      }
    }
}

var checkflag = "false";
function SelectAll(field) { //全选checkbox
  if (checkflag == "false") {
  for (i = 0; i < field.length; i++) {
  field[i].checked = true;}
  checkflag = "true";
  return "false";
  }
  else {
  for (i = 0; i < field.length; i++) {
  field[i].checked = false; }
  checkflag = "false";
  return "true";

  }
}
</script>
<style type="text/css">
  #pagelist{
    font-family:Verdana;
    color:#999999;
    font-size:12px;
    letter-spacing:1px;
    vertical-align: middle;
  }
  #pagelist a{
    color:#000040;
    text-decoration:none;
  }
  #pagelist a:hover{
    color:#F27900;
    text-decoration:none;
  }
</style>

<div id="same1">
<form name="form1" id="form1" action="/member/case_list" method="post">
  <input type="hidden" id="id" name="id" value="<%=@note_id%>"/>
  <input type="hidden" id="deleteids" name="ids"/>
  <div style="font-family:Verdana; color:#DD4504; line-height:32px; font-size:12px; letter-spacing:1px; margin: 0px 0px 0px 15px; ">
		<br>
		总共搜索到<B><%=@photo.total_entries%></B>条记录 
  </div>
  <div style="height:600px;">
    <!-- ID as id, DESNAME, DESFEE, DESAGE, DESTEL, DESSCHOOL, DESSTYLE, DESRESUME -->
  <table id="datalist" style="margin-left:7px; width:98%;">
    <tr>
            <th>编号</th>
            <th>图片</th>
            <th>名字</th>
            <th>状态</th>
            <th>操作</th>
    </tr>
    <%for p in @photo%>
    <tr align="center" style="background-color:#FFFDE6">
      <td><input type="checkbox" name="f_id" value="<%=p.id%>" /><%=p.id%></td>
      <td><img src="<%=p.imageurl%>" width="240" height="160"/></td>
      <td><%=p.title%></td>
      <td><%if p.type=='main'%>主图<%else%>普通<%end%></d>
      <td>
      	<a href="/member/user_photo_edit?id=<%=p.id%>" >修改</a>
      	<a href="/member/user_photo_del?ids=<%=p.id%>&&id=<%=@note_id%>" >删除</a>
      	<a href="/member/questions?id=<%=p.id%>&type=2" >问答</a>
      </td>
    </tr>
    <% end %>
    </table>
    </div>

    <div id="div_pagelist" style="margin:0px 10px 0px 10px;">
