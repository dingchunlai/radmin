<table width="100%" border="0" cellspacing="0" cellpadding="0">
	<tr>
		<th>编号</th>
        <th>缩略图</th>
		<th>标题</th>
		<th>状态</th>
		<th>创建日期</th>
		<th>更新日期</th>
		<th>相关操作</th>
	</tr>
	<% @promotions.each do |promotion| %>
	<tr>
		<td><%= promotion.id %></td>
        <td><%= image_tag(promotion.image.url(:thumb)) if promotion.image %></td>
		<td><%= promotion.title %></td>
		<td><%= promotion_state(promotion.status) %></td>
		<td><%= promotion.created_at.to_s(:db) %></td>
		<td><%= promotion.updated_at.to_s(:db) %></td>
		<td>
			<%= link_to "查看", charge_promotion_path(promotion) %>
			<%= link_to "处理", edit_charge_promotion_path(promotion) if promotion.status == "open" %>
		</td>
	</tr>
	<% end %>
</table>
<%= will_paginate @promotions %>